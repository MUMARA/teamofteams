{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$user": {
        ".validate": "newData.hasChildren(['email', 'firstName', 'lastName', 'date-updated', 'status']) && newData.child('dateCreated').val() == now",
        "email": {
          ".validate": "newData.isString()"
        },
        "firstName": {
          ".validate": "newData.isString()"
        },
        "lastName": {
          ".validate": "newData.isString()"
        },
        "date-updated": {
          ".validate": "newData.isNumber() && newData.val() == (data.val() == null ? now : data.val())"
        },
        "status": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "auth.uid == $user"
      }
    }
  }
}
